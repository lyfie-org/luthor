{
  "name": "@lyfie/luthor-headless",
  "version": "2.3.4",
  "description": "Luthor Editor - A headless, extensible rich text editor built on Lexical",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepack": "npm run build",
    "lint": "eslint . --max-warnings 0",
    "dev": "tsup --watch",
    "test": "vitest run",
    "check:rule-contracts": "node ../../tools/check-rule-contracts.mjs --scope=headless"
  },
  "keywords": [
    "editor",
    "rich-text",
    "lexical",
    "react",
    "typescript",
    "wysiwyg",
    "headless"
  ],
  "author": "Luthor Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyfie-app/luthor.git"
  },
  "bugs": {
    "url": "https://github.com/lyfie-app/luthor/issues"
  },
  "homepage": "https://github.com/lyfie-app/luthor#readme",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "eslint": "^9.32.0",
    "jsdom": "^26.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@lexical/code": ">=0.40.0",
    "@lexical/link": ">=0.40.0",
    "@lexical/list": ">=0.40.0",
    "@lexical/markdown": ">=0.40.0",
    "@lexical/react": ">=0.40.0",
    "@lexical/rich-text": ">=0.40.0",
    "@lexical/selection": ">=0.40.0",
    "@lexical/table": ">=0.40.0",
    "@lexical/utils": ">=0.40.0",
    "lexical": ">=0.40.0",
    "highlight.js": ">=11.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "highlight.js": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@emoji-mart/data": "^1.2.1"
  }
}
