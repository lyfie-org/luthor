{
  "name": "luthor",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --ui=stream",
    "lint": "turbo lint",
    "check:rule-contracts": "node ./tools/check-rule-contracts.mjs",
    "check:release-hardening": "node ./tools/release-hardening-smoke.mjs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "pnpm run -C apps/web deploy",
    "web:preview:wsl": "powershell -ExecutionPolicy Bypass -File ./tools/run-in-wsl.ps1 -Workdir ./apps/web -RunCommand \"pnpm run preview\"",
    "web:deploy:wsl": "powershell -ExecutionPolicy Bypass -File ./tools/run-in-wsl.ps1 -Workdir ./apps/web -RunCommand \"pnpm run deploy\""
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "workerd"
    ]
  }
}
