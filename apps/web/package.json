{
  "name": "web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "sync:docs": "node ./scripts/sync-docs.mjs",
    "sync:llms": "node ./scripts/generate-llms.mjs",
    "sync:content": "pnpm run sync:docs && pnpm run sync:llms",
    "predev": "pnpm run sync:content",
    "prebuild": "pnpm run sync:content",
    "dev": "node ../../node_modules/next/dist/bin/next dev",
    "build": "node ../../node_modules/next/dist/bin/next build",
    "start": "node ../../node_modules/next/dist/bin/next start",
    "preview": "node ../../node_modules/@opennextjs/cloudflare/dist/cli/index.js build && node ../../node_modules/wrangler/bin/wrangler.js dev --config wrangler.jsonc",
    "deploy": "node ../../node_modules/@opennextjs/cloudflare/dist/cli/index.js build && node ../../node_modules/wrangler/bin/wrangler.js deploy --config wrangler.jsonc"
  },
  "dependencies": {
    "@lyfie/luthor": "workspace:*",
    "@opennextjs/cloudflare": "^1.16.5",
    "@phosphor-icons/react": "^2.1.10",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "next": "^15.5.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "wrangler": "^4.67.0"
  }
}
